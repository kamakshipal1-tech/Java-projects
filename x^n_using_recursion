public class Power {

    public static int printPow(int x, int n) {
        if (n == 0)
            return 1;

        if (x == 0)
            return 0;

        return x * printPow(x, n - 1);
    }

    public static void main(String[] args) {
        int x = 2, n = 5;
        int output = printPow(x, n);
        System.out.println(output);
    }
}
